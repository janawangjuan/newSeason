page{
  height: 100%;
}
.transite-main{
  height: 100%;
  text-align: center;
  background: #3b05a9;
  overflow-y: hidden;
  position: relative;
}
.transite-main .transite-bg{
  width:100%;
  height: 100%;
}
.start-main{
  position: absolute;
  z-index: 2;
  width:100%;
  left: 0;
  bottom: 30rpx;
  text-align: center;
}
.start-main .join-now{
  width: 268rpx;
  display: block;
  margin: auto;
}
.start-main-btn{
  padding:0;
  display: inline-block;
  width:auto;
  background: transparent;
}
.start-main .join-numbers{
  width: 480rpx;
  height: 75rpx;
  text-align: center;
  background: #2f1677;
  border-radius: 40px;
  color:#fff;
  font-size: 33rpx;
  letter-spacing: 2rpx;
  margin:30rpx auto 0rpx;
  line-height: 75rpx;
  box-shadow: inset 0rpx 20rpx  10rpx -15rpx #000;
}
.start-main .help-txt{
  display: inline-block;
  text-align: center;
  background: linear-gradient(to bottom, #15fcf8,#0176e7);
  border-radius: 40px;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight: 700;
  height: 76rpx;
  color: #fff;
  width: 268rpx;
  line-height: 76rpx;
}