page{
  height: 100%;
  overflow: hidden;
}
.post-main{
  position: relative;
  height: 100%;
  background: pink;
  overflow: hidden;
}
.post-main .post-bg{
  width: 100%;
}
.post-main .save-btn{
  position: absolute;
  bottom: 40rpx;
  background:linear-gradient(to bottom,#19f5f9,#0385f4);
  border-radius: 40px;
  left: 50%;
  color: #fff;
  letter-spacing: 2rpx;
  transform: translateX(-50%);
}
/* 拒绝授权，再次询问 */
.post-modal-bg{
  position: fixed;
  left: 0;
  top:0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.show-photo-box{
  width: 86%;
  position: absolute;
  top: 50%;
  transform: translate(-50%,-50%);
  left: 50%;
  background:#fff;
  padding: 50rpx 30rpx;
  border-radius: 12rpx;
  margin:auto;
}

.show-photo-box>button{
  width: 70%;
  margin: auto;
  margin-top:40rpx;
}
.show-photo-box .title-hand{
  font-size: 36rpx;
  color: #333;
  text-align: center;
}
.closePoint{
  color: #c7c7c7;
  font-size: 60rpx;
  transform: rotate(45deg);
  position: absolute;
  top:0rpx;
  line-height: 60rpx;
  right: 20rpx;
}